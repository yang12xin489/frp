{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "frpc-client",
  "version": "0.1.0",
  "identifier": "frp-client",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "cross-env CARGO_TARGET_DIR=src-tauri/target cargo build --manifest-path watchdog/Cargo.toml && node scripts/prepare-sidecar.js && pnpm dev",
    "beforeBuildCommand": "cross-env CARGO_TARGET_DIR=src-tauri/target cargo build --manifest-path watchdog/Cargo.toml --release && node scripts/prepare-sidecar.js && pnpm build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "",
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "center": true,
        "transparent": true,
        "windowEffects": {
          "effects": [
            "hudWindow",
            "acrylic",
            "mica"
          ]
        }
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "externalBin": [
      "target/frp-client-watchdog"
    ]
  }
}
