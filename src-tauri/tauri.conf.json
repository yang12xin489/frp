{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "frpc",
  "version": "0.1.0",
  "identifier": "frpc",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "cargo build --manifest-path watchdog/Cargo.toml && node scripts/prepare-sidecar.js && pnpm dev",
    "beforeBuildCommand": "cargo build --manifest-path watchdog/Cargo.toml --release && node scripts/prepare-sidecar.js && pnpm build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "",
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "center": true,
        "transparent": true,
        "windowEffects": {
          "effects": [
            "hudWindow",
            "acrylic",
            "mica"
          ]
        }
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "../target/frpc-watchdog"
    ]
  }
}
